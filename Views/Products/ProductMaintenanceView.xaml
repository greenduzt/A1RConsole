<UserControl x:Class="A1RConsole.Views.Products.ProductMaintenanceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" xmlns:Core="clr-namespace:A1RConsole.Core" 
             xmlns:TextBehaviors="clr-namespace:A1RConsole.Core"
             xmlns:currency="clr-namespace:CurrencyTextBoxControl;assembly=CurrencyTextBoxControl"
             mc:Ignorable="d" 
             d:DesignWidth="1050" d:DesignHeight="800">
    <UserControl.Resources>
        <Style x:Key="TextBlockStyle" TargetType="{x:Type TextBlock}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="ToolTip" Value="{Binding (Validation.Errors).CurrentItem.ErrorContent, RelativeSource={RelativeSource Self}}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="RowStyle" TargetType="{x:Type DataGridRow}">
            <Setter Property="Background" Value="White" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#e1e9f7"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Storyboard x:Key="homeMouseEnter"/>

        <Storyboard x:Key="homeMouseLeve"/>

        <Storyboard x:Key="AdminDashboardMouseEnter"/>
        <Storyboard x:Key="AdminDashboardMouseLeave"/>

    </UserControl.Resources>
    <Grid>
        <TextBlock Background="#FF938F8F" Foreground="White" Padding="0,3,0,0" Margin="0,38,0,0" TextWrapping="Wrap" Text="PRODUCT MAINTENANCE" TextAlignment="Center" FontWeight="Bold" FontSize="20" FontFamily="Arial" Height="32" VerticalAlignment="Top"/>
        <Grid Margin="20,84,20,64"  VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>



            <TabControl Margin="0,10,0,0" Background="white" SelectedIndex="{Binding MainTabSelectedIndex, UpdateSourceTrigger=PropertyChanged}">
                <TabItem Header="Product" TabIndex="0">
                    <Grid>



                        <TextBlock VerticalAlignment="Top" Padding="1" Text="Last Modified By"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="107" FontFamily="Arial" Margin="14,216,0,0" />
                        <TextBox Margin="135,213,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="338" Text="{Binding SelectedProduct.Product.LastModifiedBy,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="False" />
                        <TextBlock VerticalAlignment="Top" Padding="1" Text="Product Code"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="106" FontFamily="Arial" Margin="13,30,0,0" />
                        <Button ToolTip="Search products" Command="{Binding SearchProductCommand}"  Margin="112,28,0,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="20">
                            <Image Source="/A1RConsole;component/Images/search.png" Width="15" Height="15"></Image>
                        </Button>
                        <ComboBox x:Name="cmbProducts" 
							IsTextSearchEnabled="True"
							TabIndex="3"  
							IsEditable="True"        	
							ItemsSource="{Binding ProductStock, Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}" 
							DisplayMemberPath="Product.ProductCode"  							   
							SelectedItem="{Binding SelectedProduct, Mode=TwoWay,NotifyOnTargetUpdated=True,UpdateSourceTrigger=PropertyChanged}"  
                            Text="{Binding SelectedProduct.Product.ProductCode, UpdateSourceTrigger=PropertyChanged}"          
							Background="#e1e9f7" Foreground="Black" FontFamily="Verdana" Height="23 " VerticalAlignment="Top" HorizontalAlignment="Left" Width="195" Margin="135,27,0,0" />

                        <Button Content="CHECK TRANSACTIONS" HorizontalAlignment="Left" Width="126" HorizontalContentAlignment="Left"  Margin="365,25,0,0" Command="{Binding CheckTransactionsCommand}" 
                        	ToolTip="Update data" Height="25" VerticalAlignment="Top" >
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="#FF787C7A"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="FontSize" Value="10"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border Background="{TemplateBinding Background}" BorderThickness="2,2,2,2" CornerRadius="4,4,4,4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF515151"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <TextBlock VerticalAlignment="Top" Padding="1" Text="Product Description"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="120" FontFamily="Arial" Margin="13,56,0,0" />
                        <TextBox Margin="135,52,0,0" Text="{Binding SelectedProduct.Product.ProductDescription}" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="356"/>

                        <TextBlock VerticalAlignment="Top" Padding="1" Text="Product Unit"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="106" FontFamily="Arial" Margin="13,80,0,0" />
                        <ComboBox x:Name="cmbProductUnit" 
							IsTextSearchEnabled="True"
							TabIndex="3"  
							IsEditable="True"        	
							ItemsSource="{Binding ProductUnit, Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}"                 	       
							SelectedValue="SelectedProductUnit"   
							Text="{Binding SelectedProduct.Product.ProductUnit, UpdateSourceTrigger=PropertyChanged}"    
							Background="#e1e9f7" Foreground="Black" FontFamily="Verdana" Height="23 " VerticalAlignment="Top" HorizontalAlignment="Left" Width="195" Margin="135,77,0,0" />

                        <TextBlock VerticalAlignment="Top" Padding="1" Text="Category"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="106" FontFamily="Arial" Margin="13,105,0,0" />
                        <ComboBox x:Name="cmbProducts_Copy1" 
							IsTextSearchEnabled="True"
							TabIndex="3"  
							IsEditable="False"        	
							ItemsSource="{Binding Categories, Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}" 
							DisplayMemberPath="CategoryName"  
							SelectedValuePath="CategoryName"        
							Text="{Binding SelectedCatgeory.CategoryName, UpdateSourceTrigger=PropertyChanged}"      
							SelectedItem="{Binding SelectedCatgeory, Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}"
							Background="#e1e9f7" Foreground="Black" FontFamily="Verdana" Height="23 " VerticalAlignment="Top" HorizontalAlignment="Left" Width="195" Margin="135,102,0,0" />

                        <GroupBox Header="Settings" Margin="822,13,-34,0" HorizontalAlignment="Left" Width="216" Height="123" VerticalAlignment="Top">
                            <Grid>
                                <CheckBox Content="Active" Margin="45,8,0,0" Foreground="Black" FontWeight="SemiBold" Height="19" VerticalAlignment="Top" HorizontalAlignment="Left" Width="89" IsChecked="{Binding SelectedProduct.Product.Active,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                <CheckBox Content="Manufactured" Margin="45,33,0,0" Foreground="Black" FontWeight="SemiBold" HorizontalAlignment="Left" Width="121" Height="18" VerticalAlignment="Top" IsChecked="{Binding SelectedProduct.Product.IsManufactured,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                <CheckBox Content="Purchased" Margin="45,58,0,0" Foreground="Black" FontWeight="SemiBold" HorizontalAlignment="Left" Width="121" Height="18" VerticalAlignment="Top" IsChecked="{Binding SelectedProduct.Product.IsPurchased,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                <CheckBox Content="Auto Order" Margin="45,81,0,2" Foreground="Black" FontWeight="SemiBold" HorizontalAlignment="Left" Width="121" IsChecked="{Binding SelectedProduct.Product.IsAutoOrder,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Product Costs" Margin="539,15,0,0" HorizontalAlignment="Left" Width="245" Height="110" VerticalAlignment="Top">
                            <Grid>
                                <TextBlock VerticalAlignment="Top" Padding="1" Text="Material Cost"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="106" FontFamily="Arial" Margin="19,11,0,0" Visibility="{Binding ProdCostVisibility}" />
                                <!--<TextBox Margin="125,8,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" Text="{Binding SelectedProduct.Product.MaterialCost,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding ProdCostVisibility}" TextAlignment="Right" />-->
                                <currency:CurrencyTextBox   Number="{Binding SelectedProduct.Product.MaterialCost,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="13" FontWeight="Medium" Padding="1" TextAlignment="Right" Height="23" Width="76" Margin="125,7,32,58" Visibility="{Binding ProdCostVisibility}" >
                                    <i:Interaction.Behaviors>
                                        <TextBehaviors:TextBoxInputBehavior InputMode="DecimalInput" JustPositivDecimalInput="false" />
                                    </i:Interaction.Behaviors>
                                    <!--<i:Interaction.Triggers>
                                        <i:EventTrigger EventName="KeyUp" >
                                            <i:InvokeCommandAction Command="{Binding DataContext.FreightPriceKeyUpCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>-->
                                </currency:CurrencyTextBox>
                                <TextBlock VerticalAlignment="Top" Padding="1" Text="Unit Price"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="84" FontFamily="Arial" Margin="19,36,0,0" Visibility="{Binding ProdCostVisibility}" />
                                <!--<TextBox Margin="125,33,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" Text="{Binding SelectedProduct.Product.UnitCost,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Visibility="{Binding ProdCostVisibility}" TextAlignment="Right" />-->
                                <currency:CurrencyTextBox   Number="{Binding SelectedProduct.Product.UnitCost,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="13" FontWeight="Medium" Padding="1" TextAlignment="Right" Height="23" Width="76" Margin="125,33,32,32" Visibility="{Binding ProdCostVisibility}" >
                                    <i:Interaction.Behaviors>
                                        <TextBehaviors:TextBoxInputBehavior InputMode="DecimalInput" JustPositivDecimalInput="false" />
                                    </i:Interaction.Behaviors>
                                    <!--<i:Interaction.Triggers>
                                        <i:EventTrigger EventName="KeyUp" >
                                            <i:InvokeCommandAction Command="{Binding DataContext.FreightPriceKeyUpCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>-->
                                </currency:CurrencyTextBox>
                                <TextBlock VerticalAlignment="Top" Padding="1" Text="List Price"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="84" FontFamily="Arial" Margin="19,61,0,0" />
                                <!--<TextBox Margin="125,58,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" TextAlignment="Right" Width="74" Text="{Binding SelectedProduct.Product.UnitPrice,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />-->

                                <currency:CurrencyTextBox  Number="{Binding SelectedProduct.Product.UnitPrice,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="13" FontWeight="Medium" Padding="1" TextAlignment="Right" Height="23" Width="76" Margin="125,59,34,6" >
                                    <i:Interaction.Behaviors>
                                        <TextBehaviors:TextBoxInputBehavior InputMode="DecimalInput" JustPositivDecimalInput="false" />
                                    </i:Interaction.Behaviors>
                                    <!--<i:Interaction.Triggers>
                                        <i:EventTrigger EventName="KeyUp" >
                                            <i:InvokeCommandAction Command="{Binding DataContext.FreightPriceKeyUpCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}" CommandParameter="{Binding}"/>
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>-->
                                </currency:CurrencyTextBox>
                                <TextBlock Margin="118,56,27,2" TextWrapping="Wrap" Text="" Visibility="{Binding ListPriceMaskVisibility}" RenderTransformOrigin="0.5,0.5" />
                            </Grid>
                        </GroupBox>

                        <TextBlock VerticalAlignment="Top" Padding="1" Text="Commodity Code"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="120" FontFamily="Arial" Margin="13,130,0,0" />
                        <ComboBox x:Name="cmbCommodityCodes" 
							IsTextSearchEnabled="True"
							TabIndex="3"  
							IsEditable="False"        	
							ItemsSource="{Binding CommodityCodes, Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}" 
							SelectedValue="SelectedCommodityCode"   
							Text="{Binding SelectedCommodityCode, UpdateSourceTrigger=PropertyChanged}"    
							Background="#e1e9f7" Foreground="Black" FontFamily="Verdana" Height="23 " VerticalAlignment="Top" HorizontalAlignment="Left" Width="195" Margin="135,127,0,0" />
                        <GroupBox Header="Stock" Margin="4,155,-32,0" HorizontalAlignment="Left" Width="1032" Height="55" VerticalAlignment="Top">
                            <Grid Margin="-2,0,2,0">
                                <TextBlock VerticalAlignment="Top" Padding="1" Text="QTY On Hand"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="98" FontFamily="Arial" Margin="6,9,0,0" />
                                <TextBox Margin="127,6,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" Text="{Binding SelectedProduct.QtyAvailable,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="False" TextAlignment="Right" />
                                <TextBlock VerticalAlignment="Top" Padding="1" Text="QTY On Hold"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="89" FontFamily="Arial" Margin="282,9,0,0" />
                                <TextBox Margin="391,6,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" Text="{Binding SelectedProduct.QtyOnHold,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="False" TextAlignment="Right" />
                                <TextBlock VerticalAlignment="Top" Padding="1" Text="On Order From Supply"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="140" FontFamily="Arial" Margin="523,9,0,0" />
                                <TextBox Margin="664,6,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" IsEnabled="False" Text="{Binding SelectedProduct.TotalSupply,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right" />
                                <TextBlock VerticalAlignment="Top" Padding="1" Text="Projected Available"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="118" FontFamily="Arial" Margin="796,9,0,0" />
                                <TextBox Margin="914,3,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" IsEnabled="False" Text="{Binding SelectedProduct.ProjectedAvailable, StringFormat=0.##,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right" />
                            </Grid>
                        </GroupBox>
                        <TabControl Margin="5,246,5,25" Background="white" SelectedIndex="{Binding BottomTabSelectedIndex, UpdateSourceTrigger=PropertyChanged}">
                            <TabItem Header="General" TabIndex="0">
                                <Grid>
                                    <TextBlock VerticalAlignment="Top" Padding="1" Text="Units Per Pack"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="98" FontFamily="Arial" Margin="15,10,0,0" />
                                    <TextBox Margin="155,6,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" TextAlignment="Right" Text="{Binding SelectedProduct.Product.UnitsPerPack,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" >
                                        <i:Interaction.Behaviors>
                                            <Core:TextBoxInputBehavior InputMode="DigitInput" JustPositivDecimalInput="True" />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                    <GroupBox Header="Stock Planning" Margin="0,34,0,0" HorizontalAlignment="Left" Width="1028" Height="93" VerticalAlignment="Top">
                                        <Grid Margin="-2,0,2,0">
                                            <TextBlock VerticalAlignment="Top" Padding="1" Text="Leadtime (days)"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="98" FontFamily="Arial" Margin="10,9,0,0" />
                                            <TextBox Margin="152,6,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" Text="{Binding SelectedProduct.SupplierProduct.LeadTime,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right" >
                                                <i:Interaction.Behaviors>
                                                    <Core:TextBoxInputBehavior InputMode="DigitInput" JustPositivDecimalInput="True" />
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                            <TextBlock VerticalAlignment="Top" Padding="1" Text="Order Point QTY"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="98" FontFamily="Arial" Margin="249,9,0,0" />
                                            <TextBox Margin="386,6,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" Text="{Binding SelectedProduct.Product.OrderPoint,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right" >
                                                <i:Interaction.Behaviors>
                                                    <Core:TextBoxInputBehavior InputMode="DigitInput" JustPositivDecimalInput="True" />
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                            <TextBlock VerticalAlignment="Top" Padding="1" Text="Safety Stock QTY"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="106" FontFamily="Arial" Margin="544,9,0,0" />
                                            <TextBox Margin="661,6,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" Text="{Binding SelectedProduct.Product.SafetyStockQty,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right" >
                                                <i:Interaction.Behaviors>
                                                    <Core:TextBoxInputBehavior InputMode="DigitInput" JustPositivDecimalInput="True" />
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                            <TextBlock VerticalAlignment="Top" Padding="1" Text="Minimum Order QTY"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="129" FontFamily="Arial" Margin="10,42,0,0" />
                                            <TextBox Margin="152,39,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" Text="{Binding SelectedProduct.Product.MinimumOrderQty,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right" >
                                                <i:Interaction.Behaviors>
                                                    <Core:TextBoxInputBehavior InputMode="DigitInput" JustPositivDecimalInput="True" />
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                            <TextBlock VerticalAlignment="Top" Padding="1" Text="Order In Multiple Of"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="129" FontFamily="Arial" Margin="249,42,0,0" />
                                            <TextBox Margin="386,39,0,0" TextWrapping="Wrap" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="74" Text="{Binding SelectedProduct.Product.OrderInMultiplesOf,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" TextAlignment="Right" >
                                                <i:Interaction.Behaviors>
                                                    <Core:TextBoxInputBehavior InputMode="DigitInput" JustPositivDecimalInput="True" />
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </Grid>
                                    </GroupBox>
                                    <GroupBox Header="Supplier" Margin="0,128,0,0" HorizontalAlignment="Left" Width="1028" Height="58" VerticalAlignment="Top">
                                        <Grid Margin="-2,0,2,0">
                                            <TextBlock VerticalAlignment="Top" Padding="1" Text="Supplier"  TextWrapping="Wrap" Foreground="Black" TextAlignment="Left"  Height="17" FontWeight="SemiBold" HorizontalAlignment="Left" Width="98" FontFamily="Arial" Margin="10,9,0,0" />
                                            <ComboBox x:Name="cmbSupplier" 
												IsTextSearchEnabled="True"
												TabIndex="3"  
												IsEditable="True"        	
												ItemsSource="{Binding Suppliers, Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}" 
												DisplayMemberPath="SupplierName"  
												SelectedValuePath="SupplierName"  
												Text="{Binding SelectedProduct.SupplierProduct.Supplier.SupplierName, Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}"    
												SelectedItem="{Binding SelectedProduct.SupplierProduct.Supplier, Mode=TwoWay, NotifyOnTargetUpdated=True, UpdateSourceTrigger=PropertyChanged}"
												Background="#e1e9f7" Foreground="Black" FontFamily="Verdana" Height="23 " VerticalAlignment="Top" HorizontalAlignment="Left" Width="308" Margin="152,5,0,0" />
                                        </Grid>
                                    </GroupBox>
                                    <Button Content="CLEAR" HorizontalAlignment="Right" Width="73" HorizontalContentAlignment="Left"  Margin="0,0,2,6" Command="{Binding ClearProductCommand}" 
                        	ToolTip="CLear form" Height="25" VerticalAlignment="Bottom" >
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Background" Value="#FF787C7A"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="FontSize" Value="12"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border Background="{TemplateBinding Background}" BorderThickness="2,2,2,2" CornerRadius="4,4,4,4">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF515151"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    <Button Content="UPDATE" HorizontalAlignment="Right" Width="73" HorizontalContentAlignment="Left"  Margin="0,0,75,6" Command="{Binding UpdateProductCommand}" 
                        	ToolTip="Update data" Height="25" VerticalAlignment="Bottom" >
                                        <Button.Style>
                                            <Style TargetType="{x:Type Button}">
                                                <Setter Property="Background" Value="#FF787C7A"/>
                                                <Setter Property="Foreground" Value="White"/>
                                                <Setter Property="FontWeight" Value="Bold"/>
                                                <Setter Property="FontSize" Value="12"/>
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type Button}">
                                                            <Border Background="{TemplateBinding Background}" BorderThickness="2,2,2,2" CornerRadius="4,4,4,4">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#FF515151"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </TabItem>
                            <TabItem Header="Sales Order Lines" TabIndex="1">
                                <Grid>
                                    <DataGrid x:Name="dgSalesOrderLines"  BorderBrush="#FFE0E0E0" HorizontalGridLinesBrush="#FF9C9C9C" VerticalGridLinesBrush="#FF9C9C9C" HorizontalScrollBarVisibility="Disabled" FontFamily="Verdana" IsReadOnly="True" ItemsSource="{Binding SalesOrderLine, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" Background="#e1e9f7" CanUserAddRows="False"   TabIndex="7" BorderThickness="0" Margin="0,10,0,30" >
                                        <DataGrid.Resources>
                                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"  Color="#FF8F8F8F"/>
                                        </DataGrid.Resources>

                                        <DataGrid.Columns>
                                            <!-- Sales No -->
                                            <DataGridTextColumn Header="SalesNo" Width="auto" IsReadOnly="False" Binding="{Binding SalesOrderNo, Mode=TwoWay}"  >
                                                <DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                                        <Setter Property="HorizontalContentAlignment"  Value="Center" />
                                                        <Setter Property="FontSize" Value="13" />
                                                        <Setter Property="FontWeight" Value="Bold" />
                                                    </Style>
                                                </DataGridTextColumn.HeaderStyle>
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="{x:Type TextBlock}">
                                                        <Setter Property="Padding" Value="5" />
                                                        <Setter Property="TextAlignment" Value="Center" />
                                                        <Setter Property="FontSize" Value="13" />
                                                        <Setter Property="FontWeight" Value="Medium" />
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <!-- Customer Name -->
                                            <DataGridTextColumn Header="Customer Name" Width="*" IsReadOnly="False" Binding="{Binding Customer.CompanyName, Mode=TwoWay}"  >
