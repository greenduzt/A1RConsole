<UserControl x:Class="A1RConsole.Views.Purchasing.AddSupplierView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:Core="clr-namespace:A1RConsole.Core"
             mc:Ignorable="d" Height="367" Width="691" MinWidth="691">

    <Grid Background="White">
        <GroupBox Header="Contact Details" Height="155" Margin="5,149,5,0" VerticalAlignment="Top"/>

        <TextBlock Background="#FF938F8F" Foreground="White" Padding="0,2,0,0" Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center" FontWeight="Bold" FontSize="15" FontFamily="Arial" Height="22" VerticalAlignment="Top" Text="Add Supplier" />
        <Label Content="Supplier Code" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="404,43,0,0" Width="86"/>
        <TextBox  x:Name="txtAvailableQty_Copy6" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.SupplierCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="486,43,0,0" Width="184" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="1" />
        <Label Content="Address" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,89,0,0" Width="89"/>
        <TextBox  x:Name="txtAvailableQty_Copy23" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="101,89,0,0" Width="276" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="2" />
        <Label Content="Suburb" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="404,89,0,0" Width="85"/>
        <TextBox  x:Name="txtAvailableQty_Copy24" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.Suburb, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="486,89,0,0" Width="184" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="3" />
        <Label Content="State" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,118,0,0" Width="89"/>
        <TextBox  x:Name="txtAvailableQty_Copy25" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.State, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="101,118,0,0" Width="76" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="4" />
        <Label Content="Post Code" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="404,119,0,0" Width="85"/>
        <TextBox  x:Name="txtAvailableQty_Copy26" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.PostCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="486,118,0,0" Width="76" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="5" />
        <Label Content="Supplier Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,43,0,0" Width="89"/>
        <TextBox  x:Name="txtSupplierName" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.SupplierName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="101,43,0,0" Width="276" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="0" />
        <Label Content="Contact1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,175,0,0" Width="89"/>
        <TextBox  x:Name="txtAvailableQty_Copy15" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.ContactName1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="101,175,0,0" Width="184" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="6" />
        <Label Content="Telephone1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,203,0,0" Width="89"/>
        <TextBox  x:Name="txtAvailableQty_Copy16" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.Telephone1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="101,203,0,0" Width="184" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="7" />
        <Label Content="Mobile1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,231,0,0" Width="89"/>
        <TextBox  x:Name="txtAvailableQty_Copy17" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.Mobile1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="101,231,0,0" Width="184" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="8" />
        <Label Content="Email1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,259,0,0" Width="89"/>
        <TextBox  x:Name="txtAvailableQty_Copy18" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.Email1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="101,259,0,0" Width="184" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="9" />
        <TextBox  x:Name="txtAvailableQty_Copy19" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.ContactName2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="486,175,0,0" Width="184" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="10" />
        <Label Content="Contact2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="404,175,0,0" Width="80"/>
        <TextBox  x:Name="txtAvailableQty_Copy20" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.Telephone2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="486,203,0,0" Width="184" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="11" />
        <Label Content="Telephone2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="404,203,0,0" Width="80"/>
        <TextBox  x:Name="txtAvailableQty_Copy21" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.Mobile2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="486,231,0,0" Width="184" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="12" />
        <Label Content="Mobile2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="404,231,0,0" Width="80"/>
        <TextBox  x:Name="txtAvailableQty_Copy22" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Supplier.Email2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="486,259,0,0" Width="184" Height="26" Background="#EDEFF7" Padding="0,3,0,0" TabIndex="13" />
        <Label Content="Email2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="404,259,0,0" Width="80"/>
        <Label Content="Active" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,308,0,0" Width="80"/>
        <Button Content="CLOSE" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="62" Height="24" HorizontalContentAlignment="Left" Margin="0,0,5,4" Command="{Binding CloseCommand}" TabIndex="17" ToolTip="Close form">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#666666"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" BorderThickness="2,2,2,2" CornerRadius="4,4,4,4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#4c4c4c"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button Content="ADD" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="62" Height="24" HorizontalContentAlignment="Left" Margin="0,0,66,4" Command="{Binding AddCommand}" ToolTip="Add data" TabIndex="16">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Background" Value="#666666"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" BorderThickness="2,2,2,2" CornerRadius="4,4,4,4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#4c4c4c"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <ComboBox 
        	x:Name="cmbDispatchTime_Copy1"
        	TabIndex="14"  
        	IsEditable="False"   
        	SelectedValuePath="Content"
           
        	Background="#e1e9f7" Foreground="Black" FontFamily="Verdana" Margin="101,311,0,0" Height="23             " VerticalAlignment="Top" SelectedValue="{Binding SelectedActive}" HorizontalAlignment="Left" Width="49" Padding="3,3,0,0" >
            <ComboBoxItem Content="Yes"/>
            <ComboBoxItem Content="No" />
        </ComboBox>
        <CheckBox Content="{Binding AddToString}" IsChecked="{Binding IsAddToProduct}" HorizontalAlignment="Left" Height="19" Margin="10,338,0,0" VerticalAlignment="Top" Width="519" TabIndex="15" />

    </Grid>
</UserControl>

