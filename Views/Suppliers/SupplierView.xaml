                                    <Grid>
                                        <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,168,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Email1}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,169,0,0" Width="237" Height="26" Padding="0,3,0,0" TabIndex="21"  />
                                        <Label Content="First Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,33,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding FirstName1}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,33,0,0" Width="237" Height="26" Padding="0,3,0,0" TabIndex="16"  />
                                        <Label Content="Designation" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,4,0,0" Width="75"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Designation1}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,6,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="15"  />
                                        <Label Content="Last Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,60,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding LastName1}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,60,0,0" Width="237" Height="26" Padding="0,3,0,0" TabIndex="17"  />
                                        <Label Content="Telephone" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,87,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Telephone1}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,87,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="18" />
                                        <Label Content="Mobile" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,114,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Mobile1}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,114,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="19" />
                                        <Label Content="Fax" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,142,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Fax1}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,142,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="20"  />
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="Contact Person2" Height="218" Margin="332,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="334">
                                    <Grid>
                                        <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,168,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Email2}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,169,0,0" Width="238" Height="26" Padding="0,3,0,0" TabIndex="35"  />
                                        <Label Content="First Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,33,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding FirstName2}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,33,0,0" Width="238" Height="26" Padding="0,3,0,0" TabIndex="30"  />
                                        <Label Content="Designation" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,4,0,0" Width="75"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Designation2}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,6,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="29"  />
                                        <Label Content="Last Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,60,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding LastName2}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,60,0,0" Width="238" Height="26" Padding="0,3,0,0" TabIndex="31"  />
                                        <Label Content="Telephone" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,87,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Telephone2}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,87,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="32"  />
                                        <Label Content="Mobile" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,114,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Mobile2}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,114,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="33"  />
                                        <Label Content="Fax" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,142,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Fax2}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,142,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="34"  />
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="Contact Person3" Height="218" Margin="666,2,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="337">
                                    <Grid>
                                        <Label Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,168,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Email3}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,169,0,0" Width="238" Height="26" Padding="0,3,0,0" TabIndex="28"  />
                                        <Label Content="First Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,33,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding FirstName3}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,33,0,0" Width="238" Height="26" Padding="0,3,0,0" TabIndex="23"  />
                                        <Label Content="Designation" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,4,0,0" Width="75"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Designation3}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,6,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="22"  />
                                        <Label Content="Last Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,60,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding LastName3}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,60,0,0" Width="238" Height="26" Padding="0,3,0,0" TabIndex="24"  />
                                        <Label Content="Telephone" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,87,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Telephone3}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,87,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="25"  />
                                        <Label Content="Mobile" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,114,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Mobile3}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,114,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="26"  />
                                        <Label Content="Fax" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,142,0,0" Width="70"/>
                                        <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Fax3}" VerticalAlignment="Top" TextAlignment="Left" Margin="83,142,0,0" Width="128" Height="26" Padding="0,3,0,0" TabIndex="27"  />
                                    </Grid>
                                </GroupBox>
                                <Label Content="Last Updated By" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="16,0,0,4" Width="97"/>
                                <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding LastUpdatedString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" TextAlignment="Right" Margin="118,0,0,4" Width="293" Height="26" Padding="0,3,0,0" TabIndex="1" IsReadOnly="True" />
                                <Button Content="UPDATE" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="106" Height="24" HorizontalContentAlignment="Left" Margin="0,0,8,4" Command="{Binding UpdateCommand}" ToolTip="Update order" TabIndex="16" Visibility="{Binding UpdateCommandVisibility}" >
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Background" Value="#666666"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border Background="{TemplateBinding Background}" BorderThickness="2,2,2,2" CornerRadius="4,4,4,4">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4c4c4c"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="ADD SUPPLIER" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="106" Height="24" HorizontalContentAlignment="Left" Margin="0,0,8,4" Command="{Binding AddNewSupplierDBCommand}" ToolTip="Add new customer" TabIndex="36" Visibility="{Binding AddCommandVisibility}" >
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Background" Value="#666666"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                            <Setter Property="FontSize" Value="12"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border Background="{TemplateBinding Background}" BorderThickness="2,2,2,2" CornerRadius="4,4,4,4">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#4c4c4c"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Purchase Orders" ToolTip="Current purchase orders" TabIndex="1" Margin="-3,0,3,-2" >
                            <Grid>
                                <DataGrid x:Name="dgCustomerOpenSalesOrders"  BorderBrush="#FFE0E0E0" HorizontalGridLinesBrush="#FF9C9C9C" VerticalGridLinesBrush="#FF9C9C9C" HorizontalScrollBarVisibility="Disabled" FontFamily="Verdana" IsReadOnly="True" ItemsSource="{Binding PurchaseOrderLines, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" Background="#e1e9f7" CanUserAddRows="False"   TabIndex="7" BorderThickness="0" Margin="0,10,0,30" >
                                    <DataGrid.Resources>
                                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"  Color="#FF8F8F8F"/>
                                    </DataGrid.Resources>

                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Purchasing Order No" Width="auto" IsReadOnly="False" Binding="{Binding PurchasingOrderNo, Mode=TwoWay}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment"  Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                    <Setter Property="ToolTip" Value="Desired shipping date" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Padding" Value="5" />
                                                    <Setter Property="TextAlignment" Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Medium" />
                                                    <Setter Property="ToolTip" Value="Desired shipping date" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="Supplier Name" Width="auto" IsReadOnly="False" Binding="{Binding Supplier.SupplierName, Mode=TwoWay}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment"  Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                    <Setter Property="ToolTip" Value="Desired shipping date" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Padding" Value="5" />
                                                    <Setter Property="TextAlignment" Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Medium" />
                                                    <Setter Property="ToolTip" Value="Desired shipping date" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <!-- Order Date -->
                                        <DataGridTextColumn Header="Order Date" Width="auto" IsReadOnly="False" Binding="{Binding OrderDate, Mode=TwoWay, StringFormat=dd/MM/yyyy}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment"  Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Padding" Value="5" />
                                                    <Setter Property="TextAlignment" Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Medium" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <!-- Receiving Date -->
                                        <DataGridTextColumn Header="Receiving Date" Width="auto" IsReadOnly="False" Binding="{Binding RecieveOnDate, Mode=TwoWay, StringFormat=dd/MM/yyyy}">
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment"  Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Padding" Value="5" />
                                                    <Setter Property="TextAlignment" Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Medium" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>

                                        <!-- Sub Total -->
                                        <DataGridTextColumn Header="Sub Total" Width="auto" IsReadOnly="False" Binding="{Binding SubTotal, Mode=TwoWay, StringFormat=\{0:c\}}"  >
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment"  Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Padding" Value="5" />
                                                    <Setter Property="TextAlignment" Value="Right" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Medium" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <!-- GST -->
                                        <DataGridTextColumn Binding="{Binding Tax, StringFormat=\{0:c\}}" Width="auto" IsReadOnly="True" Header="Gst" >
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment"  Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Padding" Value="5" />
                                                    <Setter Property="TextAlignment" Value="Right" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Medium" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <!-- Grand Total -->
                                        <DataGridTextColumn Header="Grand Total" Width="auto" IsReadOnly="False" Binding="{Binding TotalAmount, Mode=TwoWay, StringFormat=\{0:c\}}" >
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment"  Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                    <Setter Property="ToolTip" Value="Qty reserved" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Padding" Value="5" />
                                                    <Setter Property="TextAlignment" Value="Right" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Medium" />
                                                    <Setter Property="ToolTip" Value="Qty reserved" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <!-- Status -->
                                        <DataGridTextColumn Header="Status" Width="auto" IsReadOnly="False" Binding="{Binding Status, Mode=TwoWay}"  >
                                            <DataGridTextColumn.HeaderStyle>
                                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                                    <Setter Property="HorizontalContentAlignment"  Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Bold" />
                                                </Style>
                                            </DataGridTextColumn.HeaderStyle>
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Padding" Value="5" />
                                                    <Setter Property="TextAlignment" Value="Center" />
                                                    <Setter Property="FontSize" Value="13" />
                                                    <Setter Property="FontWeight" Value="Medium" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                            </Grid>
