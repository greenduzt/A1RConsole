                            <Label Content="Company Email " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="389,28,0,0" Width="96"/>
                            <Label Content="Company Telephone " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="389,55,0,0" Width="122"/>
                            <Label Content="Company Fax " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="389,82,0,0" Width="122"/>
                            <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding CompanyEmail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="511,29,0,0" Width="203" Height="26" Padding="0,3,0,0" TabIndex="7" Background="#e1e9f7" />
                            <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding CompanyTelephone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="511,56,0,0" Width="118" Height="26" Padding="0,3,0,0" TabIndex="8" />
                            <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding CompanyFax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="511,83,0,0" Width="118" Height="26" Padding="0,3,0,0" TabIndex="9"  />
                            <Label Content="Web Site" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="389,109,0,0" Width="122"/>
                            <TextBox  HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Website, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" TextAlignment="Left" Margin="511,110,0,0" Width="118" Height="26" Padding="0,3,0,0" TabIndex="9"  />

                        </Grid>
                    </GroupBox>

                    <TabControl Margin="8,196,7,0" Background="white" SelectedIndex="{Binding BottomTabSelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
